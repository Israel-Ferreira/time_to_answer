<% if @subject.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button data-dismiss="alert" aria-hidden="true" class="close">X</button>
    <ul>
      <% @subject.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>