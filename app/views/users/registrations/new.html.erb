<div>
  <a href="" class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2>Criar Conta</h2>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control"  %>
          </div>

          <div>
            <%= f.password_field :password, placeholder: "Senha..", class:"form-control"  %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder:"Confirmação de Senha", autocomplete: "new-password" %>
          </div>

          <div>
            <%= f.submit "Criar Conta", class:"btn btn-success submit text-center login-button",  style: "float: none; margin: 0px; width: 30%;" %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>



